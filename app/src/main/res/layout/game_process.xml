<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя 1"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/lv_first_gamer_score"
                android:layout_width="100dp"
                android:layout_height="280dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_second_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя 2"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/lv_second_gamer_score"
                android:layout_width="100dp"
                android:layout_height="280dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_third_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя 3"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/lv_third_gamer_score"
                android:layout_width="100dp"
                android:layout_height="280dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fourth_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя 4"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/lv_fourth_gamer_score"
                android:layout_width="100dp"
                android:layout_height="280dp" />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <EditText
        android:id="@+id/et_input_first_number"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="20sp"
        android:inputType="number"
        android:maxLength="3"/>

    <Button
        android:height="100dp"
        android:id="@+id/b_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_gravity="center"/>


</LinearLayout>


</LinearLayout>